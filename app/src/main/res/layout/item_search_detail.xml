<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="7dp"
    android:paddingStart="13dp"
    android:paddingEnd="13dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:textColor="#aaaaaaaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/tv_numaddress_detail"
        android:textSize="23sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_below="@id/tv_numaddress_detail"
        android:textSize="23sp"
        android:id="@+id/tv_codes_detail"
        android:textColor="#fff"
        android:textFontWeight="900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/tv_notes_detail"
        android:layout_below="@id/tv_codes_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>